<script>
  // –ü—Ä–æ–∫—Ä—É—Ç–∫–∞ –¥–æ –±–ª–æ–∫—É –ø–æ data-scroll-to
  document.querySelectorAll("[data-scroll-to]").forEach(function (el) {
    el.addEventListener("click", function () {
      const id = el.getAttribute("data-scroll-to");
      const target = document.getElementById(id);
      if (target) {
        window.scrollTo({
          top: target.offsetTop - 70,
          behavior: "smooth"
        });
      }
    });
  });

  // –ü–æ—Ç–æ—á–Ω–∏–π —Ä—ñ–∫ —É —Ñ—É—Ç–µ—Ä—ñ
  document.getElementById("year").textContent = new Date().getFullYear();

  // –í–ê–ñ–õ–ò–í–û: –∑–º—ñ–Ω–∏ Telegram-–ª–æ–≥—ñ–Ω –Ω–∞ —Å–≤—ñ–π (–±–µ–∑ @)
  const TELEGRAM_USERNAME = 'Svit';

  // –û–±—Ä–æ–±–∫–∞ —Ñ–æ—Ä–º–∏ ‚Äì –≤—ñ–¥–ø—Ä–∞–≤–∫–∞ –≤ Telegram
  document.getElementById("orderForm").addEventListener("submit", function (e) {
    e.preventDefault();

    const name = document.getElementById("name").value.trim();
    const phone = document.getElementById("phone").value.trim();
    const city = document.getElementById("city").value.trim();
    const np = document.getElementById("np").value.trim();
    const comment = document.getElementById("comment").value.trim();

    if (!name || !phone || !city || !np) {
      alert("–ë—É–¥—å –ª–∞—Å–∫–∞, –∑–∞–ø–æ–≤–Ω—ñ—Ç—å —É—Å—ñ –æ–±–æ–≤‚Äô—è–∑–∫–æ–≤—ñ –ø–æ–ª—è.");
      return;
    }

    if (TELEGRAM_USERNAME === 'your_username_here') {
      alert("–ë—É–¥—å –ª–∞—Å–∫–∞, —É –∫–æ–¥—ñ —Å–∞–π—Ç—É –∑–∞–º—ñ–Ω—ñ—Ç—å your_username_here –Ω–∞ —Å–≤—ñ–π –ª–æ–≥—ñ–Ω Telegram.");
      return;
    }

    let message = '–ù–æ–≤–µ –∑–∞–º–æ–≤–ª–µ–Ω–Ω—è –≥—Ä–∏ "–¢–∏ –∑–Ω–∞—î—à —â–æ —Ä–æ–±–∏—Ç–∏"%0A%0A';
    message += '–Ü–º\'—è: ' + encodeURIComponent(name) + '%0A';
    message += '–¢–µ–ª–µ—Ñ–æ–Ω: ' + encodeURIComponent(phone) + '%0A';
    message += '–ú—ñ—Å—Ç–æ: ' + encodeURIComponent(city) + '%0A';
    message += '–í—ñ–¥–¥—ñ–ª–µ–Ω–Ω—è –ù–ü: ' + encodeURIComponent(np) + '%0A';
    if (comment) {
      message += '–ö–æ–º–µ–Ω—Ç–∞—Ä: ' + encodeURIComponent(comment) + '%0A';
    }

    const url = 'https://t.me/' + TELEGRAM_USERNAME + '?text=' + message;
    window.open(url, '_blank');
  });
</script>
